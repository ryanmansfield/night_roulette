<section class="hero venue-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @venue.picture %>);">
   <h1>We've found you an awesome <%= @venue.venue_type %>, <strong><%= current_user.name.capitalize %></strong>! </h1>
</section>
<section class="content">
   <section class="add-margin-bottom">
      <div class="container">
         <div class="row ct-section_header ct-section_header--type2"></div>
         <div class="row trip-details">
            <div class="venue-details col-9">
              <h2> To say thank you for choosing Night Roulette, the first round of drinks is on us! Give your waiter or bartender the code <strong> NightRoulette$</strong> for it.</h2></br>
               <h2> Some cool facts about this place:</h2></br>
               <% @facts.each do |fact| %>
                  <p><li> <%= fact %> </li></p>
               <% end %>

               <div class="star-rating">
                  <%= render 'stars' %>
               </div>

               <%= render 'pricing' %>

               <p class="hours">Open until <%= @venue.hours %></p>

               <%= render 'map' %>
            </div>
            <button type="button" class="btn share-button" >
               Order me a car
            </button>
            <%# <div class="btn share-button">Share with your friends</div> %>
         </div>

      </div>
   </section>
</section>

