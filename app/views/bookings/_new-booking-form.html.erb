<%= simple_form_for booking do |f| %>
    <input type="hidden" name="booking[venue_types][]" />

    <fieldset class="form-group check_boxes optional booking_venue_types">
        <legend class="col-form-label pt-0">Customize which types:</legend>
        <div class="form-check">
            <input class="form-check-input check_boxes optional hidden" type="checkbox" value="bar" name="booking[venue_types][]" id="booking_venue_types_bar" style="display: none;">
            <label class="collection_check_boxes" data-for="booking_venue_types_bar">ğŸº Bar</label>
        </div>
        <div class="form-check">
            <input class="form-check-input check_boxes optional hidden" type="checkbox" value="restaurant" name="booking[venue_types][]" id="booking_venue_types_restaurant" style="display: none;">
            <label class="collection_check_boxes" data-for="booking_venue_types_restaurant"> ğŸ½ï¸ Restaurant</label>
        </div>
        <div class="form-check">
            <input class="form-check-input check_boxes optional hidden" type="checkbox" value="nightclub" name="booking[venue_types][]" id="booking_venue_types_nightclub" style="display: none;">
            <label class="collection_check_boxes" data-for="booking_venue_types_nightclub">ğŸ¸Club </label>
        </div>
    </fieldset>

    <%= f.input :latitude, label: false, class: 'hidden' %>
    <%= f.input :longitude, label: false, class: 'hidden' %>

    <div id="btn-location" style="btn btn-location" data-toggle="modal" data-target="#location-modal">Confirm location</div>

    <div>
        <p>Number of players</p>
    </div>

    <div class="row align-center">
        <div class="col-xs-2">
            <div class="plus" id="subtract-button"><i class="fas fa-minus"></i></div>
        </div>
        
        <div class="passengers-input col-xs-5" style="width: 30%;">

            <%= f.input :passengers, label: false, class: 'passenger-amount', input_html: {value: '1', disabled: true} %>
        </div>

        <div class="col-xs-2">
            <div class="plus" id="add-button"><i class="fas fa-plus"></i></div>
        </div>
    </div>

    <div class="bottom-navbar">
        <div class="left-text">
            <p>Undefined location</p>
            <p>No passengers</p>
        </div>
        <%= f.button :submit, "Place Bet ğŸƒ", class: "btn btn-bottom-bar" %>
    </div>

<% end %>
